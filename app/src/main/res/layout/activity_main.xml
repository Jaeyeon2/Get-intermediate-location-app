<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.naver.maps.map.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="3dp"                                                       android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.3"
                android:weightSum="10"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="9.0"                                                          android:layout_height="match_parent"
                    android:gravity="center"
                    android:clipToPadding="false"
                    android:orientation="vertical">

                    <com.gigamole.library.ShadowLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/toolbar_shadow"
                        android:padding="10dp"
                        android:clipToPadding="false"
                        app:sl_shadowed="true"
                        app:sl_shadow_angle="20"
                        app:sl_shadow_radius="20dp"
                        app:sl_shadow_distance="10dp"
                        app:sl_shadow_color="#000000">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.Toolbar
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="@drawable/rounded"
                                android:id="@+id/home_toolbar"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:weightSum="10"
                                android:gravity="center"
                                android:layout_gravity="center">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="6.5"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:weightSum="10"
                                    android:gravity="center">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="7.3"
                                        android:layout_gravity="center">

                                        <FrameLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                <View
                                    android:layout_marginLeft="3dp"
                                    android:gravity="center"
                                    android:textSize="15sp"
                                    android:id="@+id/input_location"
                                    android:background="@drawable/rect_text_edit"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true">

                                </View>

                                            <TextView
                                                android:layout_gravity="center"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="위치를 입력하세요"
                                                android:textSize="15sp"/>
                                        </FrameLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                        </FrameLayout>
                    </com.gigamole.library.ShadowLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

